
s = "Some text that will be used to guide text generation"

def ngrams(s, n):

    """
    to ensure that the grams are of n length, we save the value n into dummyN, and check 
    that the length of the substr s[i:n] is equal to dummyN before adding it to the dict object
    """
    D = {}
    dummyN = n
    for i in range(len(s)):
        if(len(s[i:n]) == dummyN):
            D[s[i:n]] = s.count(s[i:n])
            n += 1    
    return D
